{
	"name": "messenger-server",
	"version": "1.0.0",
	"private": true,
	"description": "messenger server",
	"author": "Aleksey Skriabin",
	"license": "ISC",
	"main": "index.ts",
	"scripts": {
		"prepare": "cd ../packages/common-types && npm install",
		"start": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register index.ts",
		"start:production": "node -r module-alias/register dist/index.js",
		"build": "rimraf dist && tsc && copyfiles -u 1 sql/**/*.sql dist/sql",
		"build:local": "npm run build && cross-env NODE_ENV=production npm run start:production",
		"test": "npm run test",
		"lint": "eslint .",
		"lint:fix": "eslint . --ext .ts --fix",
		"migrate-dev:undo": "ts-node -r tsconfig-paths/register scripts/migration-undo.ts",
		"migrate-prod:undo": "node -r module-alias/register dist/scripts/migration-undo.js",
		"backup": "ts-node -r tsconfig-paths/register scripts/db-backup.ts",
		"restore": "ts-node -r tsconfig-paths/register scripts/db-restore.ts",
		"backup:prod": "node -r module-alias/register dist/scripts/db-backup.js",
		"restore:prod": "node -r module-alias/register dist/scripts/db-restore.js"
	},
	"dependencies": {
		"connect-redis": "^8.0.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"express-session": "^1.18.0",
		"i18next": "^25.0.1",
		"i18next-http-middleware": "^3.7.1",
		"libphonenumber-js": "^1.11.17",
		"module-alias": "^2.2.3",
		"multer": "^1.4.5-lts.1",
		"node-schedule": "^2.1.1",
		"open": "^10.1.0",
		"passport": "^0.7.0",
		"passport-local": "^1.0.0",
		"redis": "^4.7.0",
		"sequelize": "^6.37.1",
		"sharp": "^0.34.1",
		"socket.io": "^4.8.1",
		"tedious": "^18.1.0",
		"uuid": "^11.1.0",
		"winston": "^3.17.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.7",
		"@types/express": "^5.0.1",
		"@types/express-session": "^1.18.0",
		"@types/module-alias": "^2.0.4",
		"@types/multer": "^1.4.11",
		"@types/node": "^22.10.2",
		"@types/node-schedule": "^2.1.7",
		"@types/passport": "^1.0.16",
		"@types/passport-local": "^1.0.38",
		"@types/redis": "^4.0.11",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.29.0",
		"@typescript-eslint/parser": "^8.29.0",
		"common-types": "file:../packages/common-types",
		"copyfiles": "^2.4.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.23.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"jiti": "^2.4.2",
		"nodemon": "^3.1.0",
		"rimraf": "^5.0.10",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.4.3"
	}
}
