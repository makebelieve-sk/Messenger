# Устанавливаем образ Node.js (22 версия - потому что она стабильна и ее можно безопасно использовать в продакшене)
FROM node:22

# Устанавливаем рабочую директорию в контейнере
WORKDIR /server

# Копируем package.json и устанавливаем зависимости
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем серверный код
COPY . .

# Запускаем сборку сервера (без запуска сервера)
RUN npm run build

# Открываем порт 5050 для доступа (внутренний порт контейнера)
EXPOSE 5050

# Запускаем сервер
CMD ["npm", "run", "start:production"]