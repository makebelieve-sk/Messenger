{
	"name": "notifications-server",
	"version": "1.0.0",
	"description": "notifications server",
	"author": "Aleksey Skriabin",
	"private": true,
	"license": "UNLICENSED",
	"main": "src/main.ts",
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	},
	"scripts": {
		"start": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:production": "cross-env NODE_ENV=production node dist/src/main",
		"build": "rimraf dist && nest build",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
		"migration:create": "npm run typeorm -- migration:create",
		"migration:generate": "npm run typeorm -- migration:generate -d ./src/data-source.ts ./src/migrations/AutoGeneratedMigration",
		"migration:run": "npm run typeorm -- migration:run -d ./src/data-source.ts",
		"migration:revert": "npm run typeorm -- migration:revert -d ./src/data-source.ts",
		"lint": "tsc --noEmit && eslint .",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.3",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.3",
		"@nestjs/microservices": "^11.1.3",
		"@nestjs/platform-express": "^11.0.1",
		"@nestjs/schedule": "^6.0.0",
		"@nestjs/swagger": "^11.2.0",
		"@nestjs/typeorm": "^11.0.0",
		"amqp-connection-manager": "^4.1.14",
		"amqplib": "^0.10.8",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"dotenv": "^16.5.0",
		"ioredis": "^5.6.1",
		"mssql": "^11.0.1",
		"nestjs-i18n": "^10.5.1",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.1",
		"swagger-ui-express": "^5.0.1",
		"typeorm": "^0.3.24"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.18.0",
		"@nestjs/cli": "^11.0.0",
		"@nestjs/schematics": "^11.0.0",
		"@nestjs/testing": "^11.0.1",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.10.7",
		"@types/express": "^5.0.0",
		"@types/ioredis": "^4.28.10",
		"@types/jest": "^29.5.14",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/parser": "^8.33.1",
		"cross-env": "^7.0.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"globals": "^16.0.0",
		"jest": "^29.7.0",
		"jiti": "^2.4.2",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.ts"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
