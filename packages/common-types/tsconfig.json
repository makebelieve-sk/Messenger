{
    "compilerOptions": {
      // ЦА – современный ESM-рантайм
      "target": "ES2021",
      "module": "commonjs",
  
      // Разрешать Node-style поиск без требований к расширениям
      "moduleResolution": "node",
  
      // Генерировать декларации
      "declaration": true,
  
      // Куда класть результат
      "outDir": "dist",
  
      // Удобства
      "esModuleInterop": true,
      "skipLibCheck": true
    },
  
    // Компилировать index.ts и всю папку src
    "include": ["index.ts", "src"]
  }